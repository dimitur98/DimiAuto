@using DimiAuto.Common
@{
    ViewData["Title"] = "_AccountNavPartial";
}
    <aside class="col-right sidebar col-sm-3 col-xs-12 wow bounceInUp animated animated" style="visibility: visible;">
        <div class="block block-account">
            <div class="block-title"> My Account </div>
            <div class="block-content">
                <ul>
                    <li class="current"><a asp-route="MyAccount" >Account Dashboard</a></li>
                    <li><a asp-route="AccountInfo"><span> Account Information</span></a></li>
                    <li><a asp-route
                           ="ChangeAvatar"><span> Change profile picture</span></a></li>
                    <li><a href="#"><span> Favourite ads</span></a></li>

                    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <li><span> <h3>ADMIN MENU</h3></span></li>
                        <li><a asp-area="Administration" asp-controller="Administration" asp-action="Approve"><span> Approve ads</span></a></li>
                        <li><a asp-area="Administration" asp-controller="Administration" asp-action="Delete"><span> Delete ads</span></a></li>
                        <li><a asp-area="Administration" asp-controller="Administration" asp-action="Deleted"><span> UnDelete ads</span></a></li>
                        <li><a asp-area="Administration" asp-controller="Administration" asp-action="PermamentDelete"><span> Permament delete ads</span></a></li>

                    }

                </ul>
            </div>
        </div>

    </aside>

