@model DimiAuto.Web.ViewModels.MyAccount.ChangePersonalInfoInputModel
@using DimiAuto.Common
@{
    ViewData["Title"] = "AccountInfo";
}
<div id="page">
    <section class="main-container col2-right-layout">
        <div class="main container">
            <div class="row">
                <section class="col-main col-sm-9 col-xs-12 wow bounceInUp animated animated" style="visibility: visible;">
                    <div class="my-account">

                            <div class="box-account">


                                <div class="page-title">
                                    <h2>Change personal info</h2>
                                </div>
                                <form asp-controller="MyAccount" asp-action="AccountInfo" method="post" class="form">
                                    <div class="form-group">
                                        <label asp-for="FirstName">First name</label>
                                        <input asp-for="FirstName" type="text" placeholder="Firstname"  class="form-control">
                                        <span asp-validation-for="FirstName" class="text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LastName">Last name</label>
                                        <input asp-for="LastName" type="text" placeholder="Lastname" class="form-control">
                                        <span asp-validation-for="LastName" class="text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="City">City</label>
                                        <input asp-for="City" type="text" placeholder="City" class="form-control">
                                        <span asp-validation-for="City" class="text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Adress">Adress</label>
                                        <input asp-for="Adress" type="text" placeholder="Adress" class="form-control">
                                        <span asp-validation-for="Adress" class="text-danger"/>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber">Phone number</label>
                                        <input asp-for="PhoneNumber" type="text" placeholder="Phone number" class="form-control">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"/>
                                    </div>
                                    @if (Model.NameOfCompany != GlobalConstants.PrivatePerson && Model.NameOfCompany != string.Empty)
                                    {
                                        <div class="form-group">
                                            <label asp-for="NameOfCompany">Name of company</label>
                                            <input asp-for="NameOfCompany" type="text" placeholder="Name of company" class="form-control">
                                            <span asp-validation-for="NameOfCompany" class="text-danger"/>
                                        </div>                        
                                        <div class="form-group">
                                            <label asp-for="Bulstad">Bulstad</label>
                                            <input asp-for="Bulstad" type="text" placeholder="Bulstad" class="form-control">
                                            <span asp-validation-for="Bulstad" class="text-danger"/>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="NameOfThePage">Name of the page</label>
                                            <input asp-for="NameOfThePage" type="text" placeholder="Name of the page" class="form-control">
                                            <span asp-validation-for="NameOfThePage" class="text-danger"/>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TelephoneForCustomers">Name of the page</label>
                                            <input asp-for="TelephoneForCustomers" type="text" placeholder="Telephone for customers" class="form-control">
                                            <span asp-validation-for="TelephoneForCustomers" class="text-danger"/>
                                        </div>
                                    }
                                    <button type="submit" title="submit" class="button"><span>Make changes</span></button>

                                </form>

                            
                        </div>
                    </div>
                </section>
                <partial name="_AccountNavPartial" />
            </div>
        </div>
    </section>
</div>
