@model DimiAuto.Web.ViewModels.MyAccount.ChangePersonalInfoInputModel
@using DimiAuto.Common
@{
    ViewData["Title"] = "AccountInfo";
}
<div id="page">
    <section class="main-container col2-right-layout">
        <div class="main container">
            <div class="row">
                <section class="col-main col-sm-9 col-xs-12 wow bounceInUp animated animated" style="visibility: visible;">
                    <div class="my-account">

                            <div class="box-account">


                                <div class="page-title">
                                    <h2>Change personal info</h2>
                                </div>
                                <form asp-controller="MyAccount" asp-action="AccountInfo" method="post" class="form">
                                    <div class="form-group">
                                        <label asp-for="FirstName">First name</label>
                                        <input asp-for="FirstName" type="text" placeholder="@Model.FirstName" value="@Model.FirstName" class="form-control">
                                        <span asp-validation-for="FirstName" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LastName">Last name</label>
                                        <input asp-for="LastName" type="text" placeholder="@Model.LastName" value="@Model.LastName" class="form-control">
                                        <span asp-validation-for="LastName" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="City">City</label>
                                        <input asp-for="City" type="text" placeholder="@Model.City" value="@Model.City" class="form-control">
                                        <span asp-validation-for="City" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Adress">Adress</label>
                                        <input asp-for="Adress" type="text" placeholder="@Model.Adress" value="@Model.Adress" class="form-control">
                                        <span asp-validation-for="Adress" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber">Phone number</label>
                                        <input asp-for="PhoneNumber" type="text" placeholder="@Model.PhoneNumber" value="@Model.PhoneNumber" class="form-control">
                                        <span asp-validation-for="PhoneNumber" />
                                    </div>
                                    @if (Model.NameOfCompany != GlobalConstants.PrivatePerson)
                                    {
                                        <div class="form-group">
                                            <label asp-for="NameOfCompany">Name of company</label>
                                            <input asp-for="NameOfCompany" type="text" placeholder="@Model.NameOfCompany" value="@Model.NameOfCompany" class="form-control">
                                            <span asp-validation-for="NameOfCompany" />
                                        </div>
                                    }
                                    <button type="submit" title="submit" class="button"><span>Make changes</span></button>

                                </form>

                            
                        </div>
                    </div>
                </section>
                <partial name="_AccountNavPartial" />
            </div>
        </div>
    </section>
</div>
