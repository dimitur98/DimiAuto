@model DimiAuto.Web.ViewModels.Home.AllUsersModel;
@using DimiAuto.Common;
@{
    ViewData["Title"] = "Users";
}

<body onload="load(@Model.Users.Count)">
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>All users</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="driver-page-wrap" class="section-padding">
        <div class="container">
            <form asp-area="" asp-controller="Home" asp-action="Users" method="post">
                <div class="input-group mb-3">
                    <input asp-for="@Model.SearchedText.SearchedText" type="text" class="form-control" placeholder="Name of page" aria-label="Name of page" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
                    </div>
                </div>
            </form>
            <div class="row">
                @foreach (var user in Model.Users)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-driver-member">
                            <img style="width:350px; height:350px;" src="@user.ImgPath" alt="">
                            <div class="driver-mem-info">
                                <div class="driver-mem-sicons">
                                    <a href="/Home/UserCars?id=@user.Id"><i class="fa fa-search"></i></a>
                                </div>
                                <h4>@user.FirstName @user.LastName<span>page:@user.NameOfThePage</span><span>@user.NameOfCompany</span></h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>
<script>
