@model DimiAuto.Web.ViewModels.Ad.AllCarsViewModel

@using DimiAuto.Common;
@using Microsoft.AspNetCore.Identity
@using DimiAuto.Data.Models

@inject SignInManager<ApplicationUser> SignInManager


@{
    ViewData["Title"] = "All cars";
}

<body onload="checkImg()">
    <section id="car-list-area" class="section-padding">
        
        <div class="book-ur-car">

                
                <div class="pick-location bookinput-item">
                    <select class="custom-select" id="orderByYeare">
                        <option selected>Year</option>
                        <option value="1">New</option>
                        <option value="2">Old</option>
                    </select>
                </div>

                <div class="pick-location bookinput-item">
                    <select class="custom-select" id="orderByPricee">
                        <option selected>Price</option>
                        <option value="1">Descending</option>
                        <option value="2">Ascending</option>
                    </select>
                </div>
                <!--<input asp-for="OrderByPrice" style="display:none" id="orderByPrice" />
        <input asp-for="OrderByYear" style="display:none" id="orderByYear" /> -->
                <form id="votesForm" method="post"></form>
                <div class="bookcar-btn bookinput-item">
                    <button onclick="sortByCriteria()">Order</button>
                </div>

            </div>

            <div class="row" id="sorted">
                
                <!-- Car List Content Start -->
                <div class="col-lg-12">
                    <div class="car-list-content">
                        <div class="row" id="sortArea">
                            <!-- Single Car Start -->

                            @foreach (var car in Model.AllCars)
                            {
                               
                                <div class="col-lg-6 col-md-6">
                                    <div class="single-car-wrap">
                                        <div class="car-list-thumb">
                                            <img style="width:600px; height:300px;" src="@car.ImgPath">
                                        </div>
                                        <div class="car-list-info without-bar">
                                            <h2><a href="/Ad/Details/id=@car.Id">@car.Make @car.Model @car.Modification</a></h2>
                                            <h5>@car.User.NameOfCompany</h5>
                                            <p>@car.MoreInformation</p>
                                            <ul class="car-info-list">
                                                <li>@car.YearOfProduction.ToString("dd.MM.yyyy")</li>
                                                <li>@car.Fuel</li>
                                                <li>@car.GearBox</li>
                                            </ul>
                                            <p class="price">Price: @car.Price BGN</p>
                                            <form id="form" method="post"></form>



                                            <a href="/Ad/Details/id=@car.Id" class="rent-btn">Details</a>
                                            @if (this.SignInManager.IsSignedIn(this.User))
                                            {
                                                <a data-toggle="tooltip" data-placement="top" title="Add to favorite" style="display:inline-block; float:right;" onclick="addToFav('@car.Id')"><img src="~/images/star.png" id="addToFav" class="searchClass"></a>
                                                <!--<a data-toggle="tooltip" data-placement="top" title="Remove from favorite" style="display:inline-block; margin-right:10px; float:right;" onclick="removeFavAd('@car.Id')"><img src="~/images/favorite_remove.png" id="addToFav" class="searchClass"></a>-->
                                            }

                                            <div id="addedAd" style="display:none;" class="alert alert-warning" role="alert">
                                                This ad is already add to Favorite!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Single Car End -->
                            <!-- Page Pagination Start -->
                            <div class="page-pagi">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- Page Pagination End -->
                        </div>
                        <!-- Car List Content End -->
                    </div>
                </div>
            </div>

</section>
</body>
<script>
    function addToFav(carId) {
        console.log(carId);
        var token = $("#form input[name=__RequestVerificationToken]").val();
        var json = { carId: carId };
        console.log(json);
        $.ajax({
            url: "/api/apiAd/addToFav",
            type: "POST",
            data: JSON.stringify(json),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            headers: { 'X-CSRF-TOKEN': token },
            success: function (data) {
                console.log(data["output"]);
                if (data["output"] == "already added") {
                console.log(data);

                $("#addedAd").show().delay(3000).fadeOut();
                }
            }
        });
    }
</script>
