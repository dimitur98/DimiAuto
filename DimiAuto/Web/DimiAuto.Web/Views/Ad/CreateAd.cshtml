</div>
<script>
    function getValue() {
        var checks = document.getElementsByClassName("checks")
        var extras = "";
        for (var i = 0; i < checks.length; i++) {
            if (checks[i].checked) {
                extras += checks[i].value + ",";

            }
        }
        document.getElementById("extras").value = extras;
    }

</script>

<script>
    function loadModels() {
        var make = $("#make option:selected").text();
        var token = $("#form input[name=__RequestVerificationToken]").val();
        var json = { make: make };
        console.log(token);
        console.log(json);
        $.ajax({
            url: "/api/apiAd/loadMakeModels",
            type: "POST",
            data: JSON.stringify(json),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            headers: { 'X-CSRF-TOKEN': token },
            success: function (data) {
                $('#model')
                    .find('option')
                    .remove()
                    .end();
                var models = data["models"];
                if (models != "-") {
                    for (var i = 0; i < models.length - 1; i++) {
                        if (models[i][0] == "_") {
                            models[i] = models[i].substring(1);
                        }
                        $("#model").append(`<option value="${i + 1}">
                                                   ${models[i]}
                                              </option>`);
                        console.log(models[i]);
                    }
                }
            }
        });
    }
</script>



