@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Register</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">

    <section id="lgoin-page-wrap" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-8 m-auto">
                    <div class="login-page-content">
                        <div class="login-form">
                            <h3>Register</h3>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="name">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="Input.FirstName"></label>
                                            <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" type="text" />
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Input.LastName"></label>
                                            <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" type="text" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email" type="email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="password">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="password">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password" type="password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="username">
                                    <label asp-for="Input.Telephone"></label>
                                    <input asp-for="Input.Telephone" class="form-control" placeholder="Telephone" type="text" />
                                    <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.Adress"></label>
                                    <input asp-for="Input.Adress" class="form-control" placeholder="Adress" type="text" />
                                    <span asp-validation-for="Input.Adress" class="text-danger"></span>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.City"></label>
                                    <input asp-for="Input.City" class="form-control" placeholder="City" type="text" />
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>

                                <input type="checkbox" id="companyUser" onclick="myFunction()">
                                <label for="companyUser"> Company</label><br>

                                <div id="companyInput" style="display:none;">
                                <div class="username">
                                    <label asp-for="Input.NameOfCompany">Name of company</label>
                                    <input asp-for="Input.NameOfCompany" class="form-control" placeholder="Name of company" type="text" />
                                    <span asp-validation-for="Input.NameOfCompany" class="text-danger"></span>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.Bulstad"></label>
                                    <input asp-for="Input.Bulstad" class="form-control" placeholder="Bulstad" type="text" />
                                    <span asp-validation-for="Input.Bulstad" class="text-danger"></span>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.TelephoneForCustomers"></label>
                                    <input asp-for="Input.TelephoneForCustomers" class="form-control" placeholder="Telephon for customers" type="text" />
                                    <span asp-validation-for="Input.TelephoneForCustomers" class="text-danger"></span>
                                </div>
                                <div class="username">
                                    <label asp-for="Input.NameOfThePage"></label>
                                    <input asp-for="Input.NameOfThePage" class="form-control" placeholder="Name of page" type="text" />
                                    <span asp-validation-for="Input.NameOfThePage" class="text-danger"></span>
                                </div>
                                    </div>

                                <button type="submit" class="btn btn-primary">Register</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    function myFunction() {

        var checkBox = document.getElementById("companyUser");
        var inputs = document.getElementById("companyInput");
        if (checkBox.checked == true) {

            inputs.style.display = "block";
        } else {
            inputs.style.display = "none";
        }
    }
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
